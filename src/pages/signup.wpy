<template>
  <view class='container'>
    <view class='select_box'>
      <view class="left">
        <view class='select'>
          <picker bindchange="selectTap"
                  value="{{index2}}"
                  range="{{array2}}"
                  class="picker_content">
            <view class="picker">
              <text>{{isShow2?array2[index2]:'分点'}}</text>
            </view>
          </picker>
          <view class="arrow_img ">
            <image src="../images/arrow-up.png"
                   mode="scaleToFill"
                   lazy-load="false">
            </image>
          </view>
          <view class="line"></view>
        </view>
      </view>
      <view class="center">
        <view class='select'>
          <picker bindchange="selectTap2"
                  value="{{index}}"
                  range="{{array}}"
                  class="picker_content">
            <view class="picker">
              <text>{{isShow?array[index]:'科目'}}</text>
            </view>
          </picker>
          <view class="arrow_img">
            <image src="../images/arrow-up.png"
                   mode="scaleToFill"
                   lazy-load="false">
            </image>
          </view>
          <view class="line2"></view>
        </view>
      </view>
      <view class="right"
            bindtap="goSearch">
        <image src="../images/home/search.png"
               mode="scaleToFill"
               lazy-load="false">
        </image>
      </view>
    </view>
    <view class="content_box">
      <view class="box">
        <view wx:if="{{is_empty==true}}"
              class="empty">
          <image src="../images/home/empty.png"
                 mode="scaleToFill"
                 lazy-load="false">
          </image>
          <text>空空如也~</text>
        </view>
        <view wx:elif="{{is_empty==false}}">
          <view class="content"
                wx:for="{{list}}"
                wx:for-index="index"
                bindtap="goDetail"
                data-id="{{item.id}}">
            <view class="content_img">
              <image src="{{item.image}}"
                     mode="scaleToFill"
                     lazy-load="false">
              </image>
            </view>
            <view class="content_detail">
              <view class="content_title">
                <view class="title">
                  <text>{{item.title}}({{item.enroll_amount}}/{{item.volume}})</text>
                </view>
                <view class="price">
                  <text>¥{{item.price}}</text>
                </view>
              </view>
              <view class="content_loca">
                <view class="loca_title">
                  <text>{{item.course_site.name}}</text>
                </view>
              </view>
              <view class="content_date">
                <text class="date">{{item.start_date}} ~ {{item.end_date}}</text>
              </view>
            </view>
          </view>
        </view>

      </view>
    </view>
