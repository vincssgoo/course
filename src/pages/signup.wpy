<script>
import wepy from 'wepy';
import api from '../api/api';
import tip from '../utils/tip';
export default class extends wepy.page {
  config = {
    navigationBarTitleText: '课程报名',
    // disableScrol
  }
  props = {}
  data = {
    is_empty: false,
    index: 0,
    index2: 0,
    array: ['全部'],
    array2: ['全部'],
    isShow: true,
    isShow2: false,
    show: false,
    show2: false,//控制下拉列表的显示隐藏，false隐藏、true显示
    locationList: [],
    typeList: [],
    site_id: '',
    type_id: '',
    keyword: '',
    index: 0,
    index2: 0,
    list: [],
  }
  components = {}
  methods = {
    goSearch () {
      wepy.navigateTo({ url: './search' });
    },
    goDetail (e) {
      let id = e.currentTarget.dataset.id;
      console.log(id);

      wepy.navigateTo({ url: './courseDetail?id=' + id });

    },
    selectTap (e) {
      this.index2 = e.detail.value
      this.isShow2 = true
      if (this.index2 == 0) {
        this.site_id = ''
      }
      else {
        this.site_id = this.locationList[this.index2 - 1].id
      }
      console.log(this.site_id);

      this.$apply();
      tip.loading('请求中');
      this.getList()
      tip.loaded()
    },

    selectTap2 (e) {
      this.index = e.detail.value
      // console.log(this.typeList[this.index].id, );
      this.isShow = true
      console.log(this.typeList);
      console.log(this.index);

      if (this.index == 0) {
        this.type_id = ''
      }
      else {
        this.type_id = this.typeList[this.index - 1].id

      }
      console.log(this.type_id);

      this.$apply();
      tip.loading('请求中');
      this.getList()
      tip.loaded()
    },
    // 点击下拉列表
    // optionTap2 (e) {
    //   let Index = e.currentTarget.dataset.index;//获取点击的下拉列表的下标
    //   this.index2 = Index;
    //   this.show2 = !this.data.show2,
    //     this.isShow2 = true,
    //     this.type_id = this.typeList.data[this.index2].id,
    //     this.$apply();
    //   this.onShow()
    // },
  }
  async getList () {
    const json = await api.courseList({
      data: {
        site_id: this.site_id,
        type_id: this.type_id,
        keyword: this.keyword,
      }
    });
    if (json.code == 0) {
      this.list = json.data;
      console.log(this.list);

    } else {
      tip.error(json.data.msg);
    }
    if (this.list.length == 0) {
      //暂无数据
      this.is_empty = true;
    }
    else {
      this.is_empty = false;
    }
    this.$apply()
  }
  events = {}
  watch = {}
  computed = {}
  onLoad () { }
  async onShow () {
    tip.loading('请求中');
    await this.getList()


    const json2 = await api.locationList({
      data: {
        name: ''
      }
    });

    if (json2.code == 0) {
      this.locationList = json2.data.data;
    } else {
      tip.error(json2.data.msg);
    }
    for (let i = 0; i < this.locationList.length; i++) {
      this.array2.push(this.locationList[i].name)
    }


    const json3 = await api.typeList({
      // data: {
      //   site_id: '',
      //   type_id: '',
      //   keyword: '',
      // }
    });
    tip.loaded();
    if (json3.code == 0) {
      this.typeList = json3.data.data;

    } else {
      tip.error(json3.data.msg);
    }
    for (let i = 0; i < this.typeList.length; i++) {
      this.array.push(this.typeList[i].name)
    }
    console.log(this.array);
    // console.log(this.list);
    // console.log(this.locationList);
    // console.log(this.typeList);

    this.$apply();

  }
}
</script>

